{
  "name": "spoolapp",
  "productName": "spoolapp",
  "version": "1.0.0",
  "description": "spoolapp",
  "title": "spoolapp",
  "type": "commonjs",
  "main": "main.js",
  "build": {
    "appId": "com.spoolapp.electron.exchange.stream",
    "productName": "spoolapp",
    "copyright": "Copyright Â© 2018 spoolapp",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        "zip",
        "dmg"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "publisherName": "spoolapp",
      "icon": "assets/icons/logo.ico",
      "publish": [
        "github"
      ],
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "dmg": {
      "icon": "assets/icon.icns",
      "title": "spoolapp"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icons/logo.ico",
      "installerSidebar": "assets/icons/logo.ico",
      "uninstallerSidebar": "assets/icons/logo.ico",
      "license": "assets/agreement.html",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "spoolapp",
        "repo": "spoolapp",
        "vPrefixedTagName": true,
        "private": true,
        "releaseType": "draft"
      }
    ]
  },
  "configuration": {
    "title": "spoolapp",
    "name": "spoolapp"
  },
  "plugins": [
    "import"
  ],
  "rules": {
    "import/no-unresolved": 2,
    "import/no-commonjs": 2,
    "import/extensions": [
      2,
      "ignorePackages"
    ]
  },
  "scripts": {
    "start": "electron .",
    "build-exe": "electron-builder --publish=never",
    "single-exe": "electron-builder -p --win",
    "package-win": "electron-packager . spoolapp --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/logo.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName='spoolapp'",
    "package-mac": "electron-builder --mac"

  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/preset-env": "^7.22.5",
    "electron": "^20.2.0",
    "electron-packager": "^17.1.1",
    "eslint-plugin-import": "^2.27.5",
    "electron-builder":"^24.6.2"
  },
  "dependencies": {
    "auto-launch": "^5.0.6",
    "axios": "^1.4.0",
    "electron-remote": "^1.3.0",
    "electron-store": "^8.1.0",
    "resize-img": "^2.0.0",
    "toastify-js": "^1.12.0"
  }
}
